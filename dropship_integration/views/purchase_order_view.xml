<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_inherit_dropship_integration" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.dropship.integration</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@id='bid_confirm']" position="attributes">
                <attribute name="context">{'validate_analytic': True, 'open_wizard': True}</attribute>
            </xpath>
            <xpath expr="//button[@id='draft_confirm']" position="attributes">
                <attribute name="context">{'validate_analytic': True, 'open_wizard': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="sale_order_id" readonly="1" invisible="not sale_order_id"/>
            </xpath>
        </field>
    </record>
</odoo>
